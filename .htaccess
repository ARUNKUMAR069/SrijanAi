# ======================================================
# 1. BASIC SECURITY HEADERS (modern & safe)
# ======================================================
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "no-referrer-when-downgrade"
    Header always unset X-Powered-By
</IfModule>

# ======================================================
# 2. DISABLE DIRECTORY BROWSING
# ======================================================
Options -Indexes

# ======================================================
# 3. DEFAULT INDEX FILES
# ======================================================
DirectoryIndex index.php index.html

# ======================================================
# 4. CLEAN URL REWRITES & PROTECTIONS
# ======================================================
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Example: Remove .php extension from URL (optional)
    # RewriteCond %{REQUEST_FILENAME} !-d
    # RewriteCond %{REQUEST_FILENAME}\.php -f
    # RewriteRule ^(.*)$ $1.php [L,QSA]

    # Block dangerous HTTP methods
    RewriteCond %{REQUEST_METHOD} ^(TRACE|DELETE|TRACK|PUT|OPTIONS) [NC]
    RewriteRule ^ - [F,L]

    # Block some common exploits in query string
    RewriteCond %{QUERY_STRING} (\.\.\/|\<|%3C|%3E|%00|base64_encode|eval\() [NC]
    RewriteRule ^ - [F,L]

    # Block bad bots/user agents
    RewriteCond %{HTTP_USER_AGENT} (libwww-perl|curl|wget|python|nikto|scanner|sqlmap) [NC]
    RewriteRule ^ - [F,L]
</IfModule>

# ======================================================
# 5. BLOCK ACCESS TO SENSITIVE FILES
# ======================================================
<FilesMatch "^(\.env|\.git|\.htaccess|composer\.(json|lock)|package\.json|phpunit\.xml|config\.php|database\.sql|.*\.ini|.*\.log|.*\.bak)$">
    Require all denied
</FilesMatch>

# ======================================================
# 6. PREVENT PHP EXECUTION IN UPLOADS
# ======================================================
<FilesMatch "^assets/uploads/.*\.php$">
    Require all denied
</FilesMatch>

# ======================================================
# 7. ENABLE GZIP COMPRESSION
# ======================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# ======================================================
# 8. LEVERAGE BROWSER CACHING
# ======================================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# ======================================================
# 9. CUSTOM ERROR PAGES
# ======================================================
ErrorDocument 403 /403.html
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html
